<Window x:Class="Personal_Ivanov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Ivanov"
        mc:Ignorable="d"
        Title="MainWindow" Height="576" Width="1024" MinHeight="450" MinWidth="800" Icon="picture/pic1.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Frame Grid.Row="0"  Background="AliceBlue"/>
        <Frame Name="MainFrame" Grid.Row="1" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"/>
        <Frame Grid.Row="2"  Background="AliceBlue" />
        <TextBlock Text="ТрейдВоркерс" FontFamily="Impact" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="36" Width="188"/>
        <Image Source="picture/pic.jpg" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" Height="150" Width="150"/>
        <Button Name="ButtonBack" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="21" Content="Назад" FontSize="20" Height="80" Width="150" Background="Azure" Click="ButtonBack_Click"/>
    </Grid>
</Window>
